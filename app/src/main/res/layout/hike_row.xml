<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <!--    android:padding="12dp">-->

        <!-- Data i Miejsce -->
        <TextView
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:id="@+id/dateAndPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="February 24, 2025 • Brzegi"
            android:textSize="16sp"
            android:textColor="#467272"
            android:layout_marginBottom="4dp"/>

        <!-- Tytuł wycieczki -->
        <TextView
            android:id="@+id/title"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rysy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#467272"
            android:layout_marginBottom="8dp"/>

        <!-- Dystans i czas -->
        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="14sp"
                    android:textColor="#467272"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 km"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#467272"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="14sp"
                    android:textColor="#467272"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6h 22m"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#467272"
                    android:gravity="start"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Galeria zdjęć przewijana poziomo -->
        <HorizontalScrollView
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/imageGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Przykładowe zdjęcia -->
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_launcher_foreground" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_launcher_foreground" />

                <!-- Można dodać więcej ImageView dynamicznie z kodu -->

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Gruba linia na dole -->
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="12dp"
            android:background="#467272" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end|top"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Usuń wędrówkę"
        app:tint="#467272"
        android:src="@drawable/ic_delete_24" />
</FrameLayout>